<!-- START:head -->
<!DOCTYPE html>
<html>
	<head>
		<title>Pragprog Books Online Store</title>
		<!-- START: stylesheet -->
		<%= stylesheet_link_tag "scaffold" %>
		<%= stylesheet_link_tag "depot", :media => "all" %>
		<!-- END: stylesheet -->
		
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
	</head>
	
	<body id="store">
		<div id="banner">
		  <%= form_tag store_path, :class => 'locale' do %>
		    <%= select_tag 'set_locale',
			  options_for_select(LANGUAGES,I18n.locale.to_s),
			  :onchange => 'this.form.submit()' %>
			<%= submit_tag 'submit' %>
			<%= javascript_tag "$$('.locale input').each(Element.hide)" %>
		  <% end %>
		    <%= image_tag("logo.png") %>
			<%= @page_title || t('.title') %>
			
			<% if session[:user_name] %>
			<div class="locale">
			<div id="frontcolor">
			
			  Welcome!
			
				 
				 <%=session[:user_name]%>
			<%= link_to t('.Logout'), logout_path, :method => :delete %>
			</div>
			
			
			</div>
			<% end %>
		</div>
		
				
				
		<div id="columns">
			<div id="side">
				<% if @cart %>
				  <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
					<%= render @cart %>
				  <% end %>
				<% end %>
				
				<a href="http://localhost:3000"><%= t('.home') %></a><br />
				<a href="http://www..../faq"><%= t('.question') %></a><br />
				<a href="http://www..../news"><%= t('.news') %></a><br />
				<a href="http://www..../contact"><%= t('.contact') %></a><br />
				<%= link_to 'Login', login_path %><br />
				<%= link_to 'Register', new_user_path %>
				<br />
				<br />
				<% if session[:user_name] %>
				 <br />
				 
				 <%= link_to 'Orders',    orders_path   %><br />
				 <%= link_to 'Products',  products_path %><br />
				 <%= link_to 'Users',     users_path    %><br />
				 <%= link_to 'Comment',   comments_path %><br />
				 <br />
				 
				
			  <% end %>
			  
			</div>
			<div id="main">
				<%= yield %>
			</div>
		</div>
	</body>
</html>