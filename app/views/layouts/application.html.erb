<!-- START:head -->
<!DOCTYPE html>
<html>
	<head>
		<title>Pragprog Books Online Store</title>
		<!-- START: stylesheet -->
		<%= stylesheet_link_tag "scaffold" %>
		<%= stylesheet_link_tag "depot", :media => "all" %>
		<!-- END: stylesheet -->
		
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
	</head>
	
	<body id="store">
		<div id="banner">
		  <%= form_tag store_path, :class => 'locale' do %>
		    <%= select_tag 'set_locale',
			  options_for_select(LANGUAGES,I18n.locale.to_s),
			  :onchange => 'this.form.submit()' %>
			<%= submit_tag 'submit' %>
			<%= javascript_tag "$$('.locale input').each(Element.hide)" %>
		  <% end %>
		    <%= image_tag("logo.png") %>
			<%= @page_title || t('.title') %>
			
			<% if session[:user_id] %>
			
			
			<div class="locale">
				<div id="Logout">
			 	 <%= t('.Welcome') + "!" %>
				  <% unless @current_user.blank? %>
				  
					 <%= @current_user.name %> &nbsp;
				 
					 <% end %>
				<%= link_to t('.Logout'), logout_path, :method => :delete %>
			</div>
			
			</div>
			<% end %>
		</div>
		
				
				
		<div id="columns">
			<div id="side">
				<% if @cart %>
				  <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
					<%= render @cart %>
				  <% end %>
				<% end %>
				
				<a href="http://localhost:3000"><%= image_tag("house.png")%><%= t('.home') %></a><br />
				<a href="http://www..../faq"><%= image_tag("question.jpg")%><%= t('.question') %></a><br />
				<a href="http://www..../news"><%= image_tag("cal.png")%><%= t('.news') %></a><br />
				<a href="http://www..../contact"><%= image_tag("contact.jpg")%><%= t('.contact') %></a><br />
				<a href="http://localhost:3000/login"><%= image_tag("user.png")%><%= t('.login') %></a><br />
				<a href="http://localhost:3000/login"><%= image_tag("user.png")%><%= t('.register') %></a><br />
				<a href="http://localhost:3000/login"><%= image_tag("buildings.png")%><%= t('.newShop') %></a><br />
				
				
				<% if session[:user_id] %>
				 <br />
				 <%= link_to t('.Orders'),    orders_path   %><br />
				 <%= link_to t('.Products'),  products_path %><br />
				 <%= link_to t('.Users'),     users_path    %><br />
				 <br />
			    <% end %>
			    
			    
			    <a href="/Manual_for_Administrator.htm" target="_blank"><%= t('.Manual_for_Administrator')%></a><br>
				<a href="/Manual_for_User.htm" target="_blank"><%= t('.Manual_for_User')%></a><br>
			  
			</div>
			
			<div id = "search">
				<span style="text-align: right">
  					<% form_tag "/products/search" do %>
   					<%= text_field_tag :search_string %>
   					<%= submit_tag t('.Search') %>
  					<% end %>
				</span>
			</div>
			
			<div id="main">
				<%= yield %>
			</div>
			<div id="right"></div>
		</div>
	</body>
</html>