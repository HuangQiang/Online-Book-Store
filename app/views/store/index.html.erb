<h1><%= image_tag("good.jpg")%> Acquisition list</h1>
<div class="entry">
<marquee>
<% @products.each do |product| %>
	<div class="photo"><%= image_tag(product.image_url) %></div>
<%  end %>
</marquee>
</div>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title_html').html_safe %></h1>

<% @products.each do |product| %>
  <div class="entry">
	<%= image_tag(product.image_url) %>
	<h3><%= product.title %></h3>
	<%=sanitize product.description %>
	<div class="price_line">
	<span class="price"><%= number_to_currency(product.price) %></span> 
    <%= button_to t('.add').html_safe, line_items_path(:product_id => product),
     :remote => true %>
	  
	 </div>
  </div>
<% end %>