<%unless cart.line_items.empty? %>
<div class="cart_title"> <%= image_tag("cart.png")%><%= t('.title') %> </div>
<table>
  <%= render(@cart.line_items) %>
 <tr class="total_line">
   <td colspan="2"> <%= t('.Total') %> </td>
   <td class="total_cell"> <%= number_to_currency(@cart.total_price)%></td>
 </tr>
 </table>
 <table>
 	<tr>
 		<td><%= button_to t('.checkout'),new_order_url, :method=>:get %></td>
 		<td> <%= button_to t('.empty'),cart, :method => :delete, :confirm => t('.confirm')+"?"%>
<% end %>
</td>
 	</tr>
</table>
